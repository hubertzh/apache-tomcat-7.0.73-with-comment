<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
    http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd"
    default-autowire="byName">
    
   
	<bean name="config_ocean_release" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="99" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	    <property name="locations">
	        <list>
	            <value>file:${user.home}/config/ocean-*.properties</value>
	        </list>
	    </property>
	</bean>

	<bean name="config_ocean_dev" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="100" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	    <property name="locations">
	        <list>
	            <value>classpath:config-ocean.properties</value>
	        </list>
	    </property>
	</bean>
	
	<!-- DB CONFIG BEGIN -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"  destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.url}" />
        <property name="username" value="${master.jdbc.username}" />
        <property name="password" value="${master.jdbc.password}" />
        <property name="initialSize" value="10" />
        <property name="maxActive" value="10" />
        <property name="testWhileIdle" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="3600000" />
        <property name="minEvictableIdleTimeMillis" value="3600000" />
        <property name="testOnBorrow" value="true"/>
	</bean>
	
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
	  <property name="configLocation">
	    <value>classpath:OceanSqlMapConfig.xml</value>
	  </property>
	  <property name="dataSource">
	    <ref bean="dataSource" />
	  </property>
	</bean>
	
	<bean id="coreDataSource" class="org.apache.commons.dbcp.BasicDataSource"  destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.core.url}" />
        <property name="username" value="${master.jdbc.core.username}" />
        <property name="password" value="${master.jdbc.core.password}" />
        <property name="initialSize" value="10" />
        <property name="maxActive" value="10" />
        <property name="testWhileIdle" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="3600000" />
        <property name="minEvictableIdleTimeMillis" value="3600000" />
        <property name="testOnBorrow" value="true"/>
	</bean>
	
	<bean id="coreSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
	  <property name="configLocation">
	    <value>classpath:OceanSqlMapConfig.xml</value>
	  </property>
	  <property name="dataSource">
	    <ref bean="coreDataSource" />
	  </property>
	</bean>
	
	<bean id="minorDataSource" class="org.apache.commons.dbcp.BasicDataSource"  destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.minor.url}" />
        <property name="username" value="${jdbc.minor.username}" />
        <property name="password" value="${jdbc.minor.password}" />
        <property name="initialSize" value="10" />
        <property name="maxActive" value="10" />
        <property name="testWhileIdle" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="3600000" />
        <property name="minEvictableIdleTimeMillis" value="3600000" />
        <property name="validationQuery" value="SELECT 1" />
        <property name="testOnBorrow" value="false"/>
	</bean>
	
	<bean id="minorSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
	  <property name="configLocation">
	    <value>classpath:OceanSqlMapConfig.xml</value>
	  </property>
	  <property name="dataSource">
	    <ref bean="minorDataSource" />
	  </property>
	</bean>
	
	<bean id="miscDataSource" class="org.apache.commons.dbcp.BasicDataSource"  destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.misc.url}" />
        <property name="username" value="${jdbc.misc.username}" />
        <property name="password" value="${jdbc.misc.password}" />
        <property name="initialSize" value="10" />
        <property name="maxActive" value="10" />
        <property name="testWhileIdle" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="3600000" />
        <property name="minEvictableIdleTimeMillis" value="3600000" />
        <property name="validationQuery" value="SELECT 1" />
        <property name="testOnBorrow" value="false"/>
	</bean>
	
	<bean id="miscSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
	  <property name="configLocation">
	    <value>classpath:OceanSqlMapConfig.xml</value>
	  </property>
	  <property name="dataSource">
	    <ref bean="miscDataSource" />
	  </property>
	</bean>

    <bean id="mobileDataSource" class="org.apache.commons.dbcp.BasicDataSource"  destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.mobile.url}" />
        <property name="username" value="${jdbc.mobile.username}" />
        <property name="password" value="${jdbc.mobile.password}" />
        <property name="initialSize" value="10" />
        <property name="maxActive" value="10" />
        <property name="testWhileIdle" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="3600000" />
        <property name="minEvictableIdleTimeMillis" value="3600000" />
    </bean>

    <bean id="mobileSqlMapClient_Old" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:OceanSqlMapConfig.xml"/>
        <property name="dataSource" ref="mobileDataSource"/>
    </bean>

    <bean id="mobileSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:sqlmaps/mobileSqlMapConfig.xml"/>
        <property name="dataSource" ref="mobileDataSource"/>
    </bean>
    
    
	
	<bean id="defaultDB" class="com.taofen8.db.DbRoute">
		<constructor-arg value="mms" />
	</bean>
	
	<bean id="dbRouteConfig" class="com.taofen8.db.DbRouteConfig">
		<property name="sqlMapList">
			<map>
				<entry key="mms">
					<ref local="sqlMapClient" />
				</entry>
				<entry key="core">
					<ref local="coreSqlMapClient" />
				</entry>
				<entry key="log">
					<ref local="minorSqlMapClient" />
				</entry>
				<entry key="misc">
					<ref local="miscSqlMapClient" />
				</entry>
                <entry key="mobile">
                    <ref local="mobileSqlMapClient_Old"/>
                </entry>
			</map>
		</property>
	</bean>
	
	<bean id="baseDAO" abstract="true" class="com.taofen8.dao.BaseDao">
		<property name="dbRouteConfig" ref="dbRouteConfig" />
		<property name="defaultDB" ref="defaultDB" />
	</bean>
	<!-- DB CONFIG END -->


</beans>